<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp">
        <Button
            android:id="@+id/back_article"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/back"/>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/article_user1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="作者名"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20sp"
            android:layout_margin="2dp">
            <Button
                android:id="@+id/follow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="关注"
                android:textSize="18sp"
                android:background="#88ee66"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40sp">
                    <ImageView
                        android:id="@+id/img_article_user"
                        android:layout_width="40sp"
                        android:layout_height="match_parent"
                        android:src="@drawable/liai"/>
                    <TextView
                        android:id="@+id/article_user2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        android:text="作者名"/>
                    <TextView
                        android:id="@+id/pagenum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5sp"
                        android:layout_marginTop="5sp"
                        android:text="1/3"/>
                </LinearLayout>
                    <TextView
                        android:id="@+id/postTitle"
                        android:text="Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginStart="10sp"/>
                    <TextView
                        android:id="@+id/article_relative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:text="#相关信息"/>
                <TextView
                    android:id="@+id/postText"
                    android:text="测试位置测试位置测试位置测试位置测试位置"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="10sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="15sp">
                    <Button
                        android:id="@+id/article_tag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/article_tag2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/article_tag3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp">
                    <EditText
                        android:id="@+id/edit_comment"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="评论..."/>
                    <Button
                        android:id="@+id/btn_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发送"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/comment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"/>
            </LinearLayout>
        </ScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp">
            <LinearLayout
                android:id="@+id/btn_right"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/img_collect"
                    android:layout_width="30sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/uncollect"/>
                <TextView
                    android:id="@+id/text_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="50sp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="30"/>
            </LinearLayout>
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="#000000"/>
            <LinearLayout
                android:id="@+id/btn_left"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/img_like"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/unlike"/>
                <TextView
                    android:id="@+id/text_like"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:paddingStart="50sp"
                    android:text="20"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>