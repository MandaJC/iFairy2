<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/actionbar"
        android:id="@+id/t01"></include>
    <EditText
        android:id="@+id/title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="在此处编辑标题"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/t01"/>
    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="8"
        android:background="@null"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="在此处分享心得吧~"
        android:layout_margin="10sp"
        android:layout_below="@id/title"/>

    <LinearLayout
        android:id="@+id/t02"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_above="@id/t03">

        <ImageView
            android:id="@+id/picture0"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/temp"
            android:padding="20sp"/>
        <ImageView
            android:id="@+id/picture1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20sp"
            android:src="@drawable/plus" />
        <ImageView
            android:id="@+id/picture2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20sp"
            android:src="@drawable/plus" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/t03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_above="@id/t04">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/relative0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="油性皮肤"
                    android:layout_toStartOf="@id/relative1"
                    android:textColor="@color/white"
                    android:background="#fff"
                    android:layout_margin="5sp"/>
                <TextView
                    android:id="@+id/relative1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:textColor="@color/white"
                    android:text="干燥皮肤"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5sp"
                    android:background="#fff"/>
                <TextView
                    android:id="@+id/relative2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:textColor="@color/white"
                    android:layout_margin="5sp"
                    android:text="混合皮肤"
                    android:layout_toEndOf="@id/relative1"
                    android:background="#fff"/>
                <TextView
                    android:id="@+id/relative3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10sp"
                    android:layout_below="@id/relative1"
                    android:textColor="@color/white"
                    android:text="易痘肤质"
                    android:layout_alignStart="@id/relative0"
                    android:background="#fff"/>
                <TextView
                    android:id="@+id/relative4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="敏感肤质"
                    android:layout_weight="1"
                    android:padding="10sp"
                    android:layout_below="@id/relative1"
                    android:textColor="@color/white"
                    android:layout_alignStart="@id/relative1"
                    android:background="#fff"/>
                <TextView
                    android:id="@+id/relative5"
                    android:layout_weight="1"
                    android:padding="10sp"
                    android:layout_below="@id/relative1"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_alignStart="@id/relative2"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/relative4"
                    android:text="亚洲肤色"
                    android:background="#fff"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入标签"
                android:textAlignment="center"
                android:background="@null"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入标签"
                android:textAlignment="center"
                android:background="@null"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入标签"

                android:textAlignment="center"
                android:background="@null"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/t04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15sp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/SAVE"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:background="@drawable/savebg"
            android:text="保存草稿"
            android:textSize="20dp" />

        <Button
            android:id="@+id/release"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:background="@drawable/publish"
            android:text="发布"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>



</RelativeLayout>

