<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    app:cardCornerRadius="10dp"
    android:id="@+id/cardview"
    app:cardPreventCornerOverlap="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30sp">
            <ImageView
                android:id="@+id/img_column_author"
                android:src="@drawable/liai"
                android:layout_width="30sp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/column_author"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10sp"
                android:textSize="20sp"
                android:maxEms="7"
                android:maxLines="1"
                android:text="作者："/>
        </LinearLayout>
        <ImageView
            android:id="@+id/column_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:adjustViewBounds="true"
            android:src="@drawable/q5"/>
            <TextView
                android:id="@+id/column_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="22sp"
                android:gravity="center"
                android:text="标题待加载......"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp">
            <LinearLayout
                android:id="@+id/column_left"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
            <ImageView
                android:id="@+id/column_good"
                android:layout_width="40sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15sp"
                android:src="@drawable/good"/>
            <TextView
                android:id="@+id/good_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:layout_margin="5sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/column_right"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
            <ImageView
                android:id="@+id/colummn_bad"
                android:layout_width="40sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15sp"
                android:src="@drawable/bad"/>
            <TextView
                android:id="@+id/bad_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:layout_margin="5sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
