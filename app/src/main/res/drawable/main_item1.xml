<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:layout_margin="5sp">
        <com.example.ifairy.RoundImageView
            android:id="@+id/main_page1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/liai"/>
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp">
            <TextView
                android:id="@+id/title1"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="#000000"
                android:layout_weight="1"
                android:text="黛珂怎么选？混痘油？空瓶经验分享"/>

            <Button
                android:background="@drawable/xia"
                android:id="@+id/notLike"
                android:layout_width="30sp"
                android:layout_height="20sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="15sp">
            <ImageView
                android:id="@+id/user_photo1"
                android:src="@drawable/liai"
                android:layout_width="25sp"
                android:layout_height="25sp"/>
            <TextView
                android:id="@+id/user_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="5"
                android:maxLines="2"
                android:hint="人人都是小仙女"
                android:layout_toEndOf="@id/user_photo1"
                android:layout_marginStart="5sp"
                android:layout_alignBaseline="@id/user_photo1"/>
            <ImageView
                android:id="@+id/like_image"
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:layout_toStartOf="@id/like_num"
                android:src="@drawable/liai"/>
            <TextView
                android:id="@+id/like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textSize="15sp"
                android:layout_margin="5sp"/>
        </RelativeLayout>

</LinearLayout>
